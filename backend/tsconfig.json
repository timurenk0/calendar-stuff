{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "target": "esnext",                                  
    
    "module": "commonjs",                                
    
    "rootDir": "./src",
    "outDir": "./dist",                                  
    
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    
    "strict": true,                                      
    
    "skipLibCheck": true                                 
  },
  "include": ["src", "../lib/dist/"],
}
